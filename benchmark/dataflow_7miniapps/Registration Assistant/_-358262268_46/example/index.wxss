.index .weui-flex {
    align-items: center;
}

.index .weui-cells {
    margin-top: 0;
    opacity: 0;
    transform: translateY(-50%);
    transition: .3s;
}

.index .weui-cells:after,.index .weui-cells:before {
    display: none;
}

.index .weui-cells_show {
    opacity: 1;
    transform: translateY(0);
}

.index .weui-cell:before {
    right: 15px;
}

.index .kind-list__item {
    margin: 10px 0;
    background-color: #fff;
    border-radius: 2px;
    overflow: hidden;
}

.index .kind-list__item:first-child {
    margin-top: 0;
}

.index .kind-list__img {
    width: 30px;
    height: 30px;
}

.index .kind-list__item-hd {
    padding: 20px;
    transition: opacity .3s;
}

.index .kind-list__item-hd_show {
    opacity: .4;
}

.index .kind-list__item-bd {
    height: 0;
    overflow: hidden;
}

.index .kind-list__item-bd_show {
    height: auto;
}

.shareWrapper {
    position: fixed;
    bottom: -100%;
    left: 0;
    right: 0;
    padding: 50rpx 0;
    background-color: rgba(213,131,255,.5);
}

.shareWrapper .weui-flex__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.shareWrapper image {
    width: 200rpx;
    height: 200rpx;
}
.faultItem {
    display: flex;
    align-items: center;
    border: 1px solid #ffe6db;
    margin: 20rpx;
    background: #fff;
    padding: 20rpx 0;
    border-radius: 10px;
}

.imgView {
    width: 100rpx;
    height: 100rpx;
    margin: 0 30rpx;
}

.imgView image {
    width: 100%;
    height: 100%;
}

.textView {
    flex: 1;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.title {
    font-size: 30rpx;
    font-weight: 700;
    color: #333;
}

.openTime {
    margin-top: 10rpx;
    font-size: 24rpx;
    min-height: 28rpx;
    color: #999;
}
    color: #584f4f;
    font-size: 28rpx;
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap {
    max-height: 50rpx;
    overflow: hidden;
    transition: all .3s;
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap .express {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    font-size: 24rpx;
    color: #aca3a3;
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap .express .progress {
    -ms-flex-negative: 0;
    flex-shrink: 0;
    width: 30rpx;
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-flow: column;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap .express .progress .circle {
    -ms-flex-negative: 0;
    flex-shrink: 0;
    position: relative;
    z-index: 2;
    width: 12rpx;
    height: 12rpx;
    background: #c7c0bc;
    border-radius: 12rpx;
    transform: translateY(22rpx);
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap .express .progress .circle.first_circle {
    width: 12rpx;
    height: 12rpx;
    background: #ff5000;
    border: 6rpx solid #ffe3d6;
    transform: translateY(16rpx);
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap .express .progress .vertical_line {
    position: absolute;
    z-index: 1;
    top: 24rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 4rpx;
    height: 100%;
    background: #c7c0bc;
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap .express .express_info {
    margin-left: 10rpx;
    padding: 10rpx 0;
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap .express .express_info.first_line {
    color: #444242;
}

.express_info_container .express_info_wrap .express_wrap .express_detail_wrap.active {
